<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".menu.vistas.addMFunkosActivitty">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="327dp"
        android:layout_height="148dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/funko_titulo" />

    <EditText
        android:id="@+id/edtIdFunko"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="id Funko"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <EditText
        android:id="@+id/edtNombreFunko"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/edtIdFunko"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtIdFunko"
        app:layout_constraintTop_toBottomOf="@+id/edtIdFunko" />

    <EditText
        android:id="@+id/edtCategoriaFunko"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Categoria"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/edtNombreFunko"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtNombreFunko"
        app:layout_constraintTop_toBottomOf="@+id/edtNombreFunko" />

    <Button
        android:id="@+id/btn_addImfFunko"
        android:layout_width="107dp"
        android:layout_height="59dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/bordes_redondos"
        android:backgroundTint="@android:color/holo_red_dark"
        android:onClick="cambiarImagenFunko"
        android:text="Imagen"
        app:layout_constraintEnd_toEndOf="@+id/edtCategoriaFunko"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toEndOf="@+id/img_funkoUpdate"
        app:layout_constraintTop_toBottomOf="@+id/edtCategoriaFunko" />

    <ImageView
        android:id="@+id/img_funkoUpdate"
        android:layout_width="173dp"
        android:layout_height="110dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/edtCategoriaFunko"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtCategoriaFunko"
        app:layout_constraintTop_toBottomOf="@+id/edtCategoriaFunko"
        app:srcCompat="@drawable/funko_titulo" />

    <Button
        android:id="@+id/btnAddFunko"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/bordes_redondos"
        android:backgroundTint="@android:color/holo_red_dark"
        android:onClick="crearFunko"
        android:text="AÃ±adir Funko"
        app:layout_constraintEnd_toEndOf="@+id/edtCategoriaFunko"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edtCategoriaFunko"
        app:layout_constraintTop_toBottomOf="@+id/edtCategoriaFunko" />
</androidx.constraintlayout.widget.ConstraintLayout>